<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_purple"
    android:backgroundTint="@color/dark_purple"
    android:paddingTop="22dp"
    tools:context=".ui.currentBets.CurrentBetsFragment">

<com.google.android.material.tabs.TabLayout
        android:id="@+id/tl_options"
        app:tabUnboundedRipple="true"
       android:layout_marginHorizontal="22dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content"
        android:layout_width="0dp">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:icon="@drawable/ic_baseline_shopping_cart_24"
            android:text="Carrinho"/>

        <com.google.android.material.tabs.TabItem
            android:icon="@drawable/ic_baseline_watch_later_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Em andamento"/>

    </com.google.android.material.tabs.TabLayout>


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_option"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@id/tl_options"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="0dp"/>
a


</androidx.constraintlayout.widget.ConstraintLayout>