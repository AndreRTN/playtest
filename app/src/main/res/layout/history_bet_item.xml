<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginBottom="12dp"
    android:background="@color/dark_purple"
    android:paddingHorizontal="22dp"
    android:paddingTop="6dp"
    android:paddingBottom="12dp"
    >

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="13 August"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="id: 120349"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_date"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:layout_marginStart="22dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_value"
        app:layout_constraintTop_toTopOf="@id/tv_value"
        android:id="@+id/tv_odd"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:text="X - 1.256"
        app:layout_constraintStart_toEndOf="@id/tv_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tv_date"

        android:text="R$ 3000,00"
        android:textColor="@color/primary_green"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/tv_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/iv_result"
        android:importantForAccessibility="no"
        android:src="@drawable/ic_baseline_attach_money_24"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:tint="@color/primary_green" />

</androidx.constraintlayout.widget.ConstraintLayout>