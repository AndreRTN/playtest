<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:backgroundTint="@color/white"
    android:layout_marginBottom="12dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackgroundBorderless"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="22dp"
    android:layout_height="wrap_content"
    android:background="@drawable/button_rounded_sm"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/iv_flag"
        tools:src="@drawable/ic_baseline_flag_24"
        android:contentDescription="flag"
        android:layout_width="35dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="30dp"/>

    <TextView
        app:layout_constraintTop_toTopOf="@id/iv_flag"
        app:layout_constraintBottom_toBottomOf="@id/iv_flag"
        app:layout_constraintStart_toEndOf="@id/iv_flag"
        tools:text="Brazil"
        android:layout_marginStart="22dp"
        android:textColor="@color/dark_purple"
        android:textSize="16sp"
        android:textStyle="bold"
        android:id="@+id/tv_country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:textColor="@color/dark_purple"
        android:textStyle="bold"
        android:id="@+id/tv_quantity"
        tools:text="5"
        app:layout_constraintTop_toTopOf="@id/iv_flag"
        app:layout_constraintBottom_toBottomOf="@id/iv_flag"
        app:layout_constraintEnd_toStartOf="@id/iv_to_games"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_height="wrap_content"/>

    <ImageView
        app:layout_constraintTop_toTopOf="@id/iv_flag"
        app:layout_constraintBottom_toBottomOf="@id/iv_flag"

        android:id="@+id/iv_to_games"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?selectableItemBackgroundBorderless"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_baseline_keyboard_double_arrow_right_24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:tint="@color/background_purple" />


</androidx.constraintlayout.widget.ConstraintLayout>